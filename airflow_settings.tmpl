airflow:
  connections:
    - conn_id: analytics_redshift
      conn_type: postgres
      conn_host: {{(datasource "creds").host}}
      conn_schema: analytics
      conn_login: {{(datasource "creds").username}}
      conn_password: {{(datasource "creds").password}}
      conn_port: {{(datasource "creds").port}}
      conn_extra:
  pools:
    - pool_name: data_pool
      pool_slot: 5
      pool_description: Pool for the data group
  variables:
    - variable_name:
      variable_value:
